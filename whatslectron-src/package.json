{
  "name": "whatsapp-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:esbuild": "node scripts/esbuild.js"
  },
  "devDependencies": {
    "electron": "39.2.5",
    "electron-builder": "26.0.18",
    "esbuild": "^0.19.0"
  },  
  "build": {
    "appId": "whatslectron.pparent",
    "productName": "whatslectron",
    "directories": {
      "output": "dist"
    },
    "files": [
        "main.js",
        "preload.js",
        "ubuntutheme.js",
        "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 
